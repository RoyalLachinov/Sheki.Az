<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="about.About_Education_Detail"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lbEducation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/medeni_maarif"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        >

        <TextView android:id="@+id/lbNumber"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="@string/number"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:gravity="start"
            android:textStyle="bold"/>

        <TextView android:id="@+id/lbSchoolNumber"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="@string/office_name"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView android:id="@+id/lbAddress"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="@string/office_address"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView android:id="@+id/lbManagment"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="@string/manager_name"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView android:id="@+id/lbPhone"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="@string/office_phone"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:gravity="center"
            android:textStyle="bold"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewCulture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>

