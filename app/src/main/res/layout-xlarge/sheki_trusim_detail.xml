<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tourism.Trusim_Detail">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp">

            <TextView
                android:id="@+id/lbAboutTrusimDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lbDetailImageOne"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/lbDetailImageTwo"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/lbDetailImageThree"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/lbDetailImageFour"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/lbDetailImageFive"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
