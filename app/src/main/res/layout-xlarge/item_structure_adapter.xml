<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="administration.StructureAdapter"
    android:orientation="horizontal"
    android:weightSum="11">

    <TextView android:id="@+id/lbSection_Position"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:textSize="30sp"
        android:textColor="#000000"
        android:text="@string/structure_positions"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"/>

    <TextView android:id="@+id/lbFullName"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:textSize="30sp"
        android:textColor="#000000"
        android:text="@string/structure_names"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"/>


    <TextView android:id="@+id/lbPhone"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:textSize="30sp"
        android:textColor="#000000"
        android:text="@string/structure_positions"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"/>

</LinearLayout>
